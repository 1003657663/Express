<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/top_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/user_login_center_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_radio_width_border"
            android:id="@+id/login_tel_edit"
            android:hint="手机号"
            android:inputType="phone"
            android:paddingLeft="@dimen/edit_left_and_right_padding"
            android:paddingRight="@dimen/edit_left_and_right_padding" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_radio_width_border"
                android:id="@+id/login_tel_verify"
                android:hint="验证码"
                android:inputType="phone"
                android:paddingLeft="@dimen/edit_left_and_right_padding"
                android:paddingRight="@dimen/edit_left_and_right_padding" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/login_tel_verify_button"
                android:background="@drawable/button_radio_with_background_color"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="获取验证码"/>
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_radio_width_border"
            android:id="@+id/login_password_edit"
            android:hint="密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/edit_left_and_right_padding"
            android:paddingRight="@dimen/edit_left_and_right_padding" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_radio_width_border"
            android:id="@+id/login_username_edit"
            android:visibility="gone"
            android:hint="用户名"
            android:inputType="text"
            android:paddingLeft="@dimen/edit_left_and_right_padding"
            android:paddingRight="@dimen/edit_left_and_right_padding" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_button"
            android:background="@drawable/button_radio_with_background_color"
            android:layout_marginBottom="10dp"
            android:text="登陆"
            android:textColor="@color/white" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_button"
            android:background="@drawable/button_radio_with_background_color"
            android:text="注册"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>