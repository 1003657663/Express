<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">
    <include layout="@layout/top_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >
        <EditText
            android:layout_width="100sp"
            android:layout_height="60sp"
            android:hint="from city"
            android:id="@+id/package_from"
            android:gravity="center"
            android:textSize="10sp"/>
        <ImageView
            android:layout_width="100sp"
            android:layout_height="60sp"
            android:src="@mipmap/to"
            android:scaleType="fitXY"
            />
        <EditText
            android:hint="to city"
            android:layout_width="100sp"
            android:layout_height="60sp"
            android:id="@+id/packageto"
            android:gravity="center"
            android:textSize="10sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20sp"
            android:paddingLeft="20sp">
            <TextView
                android:layout_height="30sp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="包裹单号：      "/>
            <TextView
                android:layout_height="30sp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:id="@+id/ID"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20sp"
            android:paddingLeft="20sp">
            <TextView
                android:layout_height="30sp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="负责人：   "/>
            <TextView
                android:layout_height="30sp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:id="@+id/EmployeesName"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20sp"
            android:paddingLeft="20sp">
            <TextView
                android:layout_height="30sp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="负责人ID：      "/>
            <TextView
                android:layout_height="30sp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:id="@+id/EmployeesID"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20sp"
            android:paddingLeft="20sp">
            <TextView
                android:layout_height="30sp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="打包时间:"/>
            <TextView
                android:layout_height="30sp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:id="@+id/closetime"
                />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/open"
        style="@drawable/button_style"
        android:text="拆包" />
</LinearLayout>
